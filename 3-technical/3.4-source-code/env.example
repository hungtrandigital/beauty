# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=beauty_user
DATABASE_PASSWORD=beauty_password
DATABASE_NAME=beauty_db
DATABASE_URL=postgresql://beauty_user:beauty_password@postgres:5432/beauty_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# CouchDB Configuration (for offline sync)
COUCHDB_HOST=couchdb
COUCHDB_PORT=5984
COUCHDB_USER=beauty_admin
COUCHDB_PASSWORD=beauty_admin_password
COUCHDB_URL=http://beauty_admin:beauty_admin_password@couchdb:5984

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1

# Security
BCRYPT_ROUNDS=10

# CORS (if needed)
CORS_ORIGIN=http://localhost:3001

