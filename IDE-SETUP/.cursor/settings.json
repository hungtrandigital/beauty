{
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/.cursor": false,
    "**/archives": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/archives": true,
    "**/.cursor": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.cursor/**": true
  },
  "files.associations": {
    "*.md": "markdown"
  },
  "editor.formatOnSave": true,
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true
}
